#include <bits/stdc++.h>
using namespace std;
#define rep(k,z) for(int i=k;i<z;i++)
 //https://codeforces.com/blog/entry/76984
 
int main(){
    int n;
	vector<int> v;
 
	cin>>n;
	v.resize(n);
	
	rep(0,n)
	   {
		cin>>v[i];
		
	   }
	
    sort(v.begin(),v.end());
 
	long long sum=0;
	rep(0,n-1)
	sum+=v[i];
 
	if(sum<=v[n-1])
	cout<<2*v[n-1]<<endl;
	else 
	cout<<sum+v[n-1]<<endl;
 
	
	return 0;
}
